{
    // enforce
    "bitwise":       true,
    "camelcase":     true,
    "curly":         false,
    "eqeqeq":        true,
    "forin":         true,
    "immed":         false,
    "indent":        false,
    "latedef":       true,
    "newcap":        true,
    "noarg":         true,
    "noempty":       false,
    "plusplus":      false,
    "quotmark":      "single",
    "unused":        true,
    "strict":        false,
    "trailing":      true,
    "maxstatements": 20,
    "maxdepth":      5,
    "maxparams":     4,
    "maxcomplexity": 5,
    "maxlen":        160,


    // relaxing
    "asi":           true,
    "boss":          false,
    "debug":         false,
    "eqnull":        true,
    "es5":           false,
    "esnext":        false,
    "expr":          false,
    "funcscope":     false,
    "sub":           true,

    // globals
    "globals":       {
        "mocha":   true,
        "assert":  true,
        "require": true
    },

    "passfail": false,
    "white":    false
}
